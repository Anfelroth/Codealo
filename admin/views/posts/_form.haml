- error = @post.errors.include?(:titulo)
%fieldset.control-group{:class => error ? 'has-error' : ''}
  =f.label :titulo, :class => 'control-label'
  .controls
    =f.text_field :titulo, :class => 'form-control input-large input-with-feedback', :autofocus => true
    %span.help-inline=error ? f.error_message_on(:titulo, :class => 'text-error') : pat(:example)
- error = @post.errors.include?(:cuerpo)
%fieldset.control-group{:class => error ? 'has-error' : ''}
  =f.label :cuerpo, :class => 'control-label'
  .controls
    ~f.text_area :cuerpo, :class => 'form-control input-large input-with-feedback'
    %span.help-inline=error ? f.error_message_on(:cuerpo, :class => 'text-error') : pat(:example)

.form-actions
  =f.submit pat(:save), :class => 'btn btn-primary'
  &nbsp;
  =f.submit pat(:save_and_continue), :class => 'btn btn-info', :name => 'save_and_continue'
  &nbsp;
  =link_to pat(:cancel), url(:posts, :index), :class => 'btn btn-default'